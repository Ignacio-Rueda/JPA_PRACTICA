package com.linkedin.learning.otrareunionmas.utiles;

import jakarta.persistence.EntityManager;
import jakarta.persistence.EntityManagerFactory;
import jakarta.persistence.Persistence;

public class EntityManagerUtil {
	public static EntityManager getEntityManager() {
		EntityManager factory = (EntityManager) Persistence.createEntityManagerFactory("OtraReunionMas");
		EntityManager manager = ((EntityManagerFactory) factory).createEntityManager();
		return manager;
	}
	
	public static void main(String[]args) {
		EntityManager manager = EntityManagerUtil.getEntityManager();
		System.out.println("EntityManager class ==>"+manager.getClass().getCanonicalName());
	}
}
